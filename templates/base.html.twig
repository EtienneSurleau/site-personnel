        <link rel="stylesheet" href="{{ asset('css/navbar.css') }}">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
    <nav id="navigation">
        <ul>
            <li>
                <a href="{{ path('competences') }}"><div>
                        <i class="fas fa-layer-group"></i> <span class="nav-text"><br>COMPETENCES</span>
                    </div></a>
            </li>
            <li>
                <a href="{{ path('experiences') }}"><div>
                        <i class="fas fa-briefcase"></i> <span class="nav-text"><br>EXPERIENCES</span>
                    </div></a>
            </li>
            <li id="nav-brand-li">
                <a href="/"><img src="{{ asset('images/logoESblanc.png') }}" alt="Logo blanc accueil"></a>
            </li>
            <li>
                <a href="{{ path('realisations') }}"><div>
                        <i class="fas fa-hard-hat"></i> <span class="nav-text"><br>REALISATIONS</span>
                    </div></a>

            </li>
            <li>
