                        <i class="fas fa-envelope"></i> <span class="nav-text"><br>CONTACT</span>
                    </div></a>

            </li>
        </ul>
    </nav>
    {# read and display all flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            {% if loop.first %}
                <div class="container-fluid text-center" id="flashes">
            {% endif %}
            <div class="alert alert-{{ label }} alert-dismissible fade show d-inline-block" role="alert">
                {{ message }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            {% if loop.last %}
                </div>
            {% endif %}
        {% endfor %}
    {% endfor %}
    <div id="content">
        {% block body %}
        {% endblock %}
    </div>
    {% block comp_body %}

    {% endblock %}

    <footer class="mt-5" data-aos="fade-in">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-9 col-md-2 d-flex justify-content-center">
                    <img src="{{ asset('images/logoESblanc.png') }}" alt="logo blanc" class="img-fluid" id="logofooter">
                </div>
                <div class="col-12 col-md-4 social">
                    <p>
                        <a href="https://www.linkedin.com/in/etienne-surleau/"><i class="fab fa-linkedin"></i> LinkedIn</a>
                    </p>
                    <p>
                        <a href="mailto:etienne.surleau.pro@gmail.com"><i class="fa fa-envelope"></i> etienne.surleau.pro@gmail.com</a>
                    </p>
                    <p>
                        <a href="tel:+33635397713"><i class="fa fa-phone"></i> +33 6 35 39 77 13</a>
                    </p>
                </div>
                <div class="col-12 col-md-4">
                    <p>
                        ©2019 Etienne SURLEAU
                    </p>
                    <p>
                        <a href="{{ path('legals') }}" class="white"><u>Mentions légales</u></a>
                    </p>
                </div>
            </div>

        </div>
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
